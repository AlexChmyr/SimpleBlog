@model SimpleBlog.Models.Post
    
<article class="post">
    <h1><a href="@Url.RouteUrl("Post",new {id = Model.Id, slug = Model.Slug})">@Model.Title</a></h1>
    <div>
        @Html.Raw(Model.Content)
    </div>
    <footer>
        <ul class="pull-right list-unstyled tags">
            @foreach (var tag in Model.Tags)
            {
                <li class="badge">
                    <a href="@Url.RouteUrl("Tag",new {id = tag.Id, slug = tag.Slug})">@tag.Name</a>
                </li>
            }
        </ul>
        Posted: @((int)(DateTime.UtcNow - Model.CreatedAt).TotalDays) days ago
    </footer>
</article>

